<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.ManageMenu"
             Title="Manage"
             BackgroundColor="PaleGreen">
    <VerticalStackLayout>
        <Button
            x:Name="ManageQuestsBtn"
            Text="Manage Quests" 
            Clicked="OnManageQuestsClicked"
            HorizontalOptions="Center"
            WidthRequest="150"
            HeightRequest="100"/>
        <Button
            x:Name="ManageUsersBtn"
            Text="Manage Users" 
            Clicked="OnManageUsersClicked"
            HorizontalOptions="Center"
            WidthRequest="150"
            HeightRequest="100"/>
        </VerticalStackLayout>
</ContentPage>